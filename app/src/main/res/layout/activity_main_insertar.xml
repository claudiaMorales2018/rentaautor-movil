                android:hint="Bocinas" />

            <EditText
                android:id="@+id/Inspeccion_20_Asientos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Asientos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/Inspeccion_21_Llantas_Delantera_Derecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Llantas D.D." />

            <EditText
                android:id="@+id/Inspeccion_22_Llanta_Delantera_Izquierda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Llanta D.I." />

            <EditText
                android:id="@+id/Inspeccion_23_Llanta_Posterior_Derecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Delantera P.D" />

            <EditText
                android:id="@+id/Inspeccion_24_Llanta_Posterior_Izquierda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Llanta P.I." />

            <EditText
                android:id="@+id/Inspeccion_25_Llanta_Repuesto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Llanta R" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/Inspeccion_26_Conos_Seguridad"
