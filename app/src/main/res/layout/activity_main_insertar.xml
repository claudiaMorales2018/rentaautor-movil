                android:id="@+id/Inspeccion_28_Tricket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Tricket" />


            <EditText
                android:id="@+id/Inspeccion_29_Rallon_Delantero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Rallon D" />

            <EditText
                android:id="@+id/Inspeccion_30_Rallon_Trasero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Rallon T. " />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/Inspeccion_31_Rallon_Lateral_Derecho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Rallon  L.D." />

            <EditText
                android:id="@+id/Inspeccion_32_Rallon_Lateral_Izquierdo"
                android:layout_width="wrap_content"
