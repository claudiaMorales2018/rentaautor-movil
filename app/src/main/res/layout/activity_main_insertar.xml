                android:textSize="12sp"
                android:hint="Rallon L.I." />

            <EditText
                android:id="@+id/Inspeccion_33_Tarjeta_Propiedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Tarjeta P " />

            <EditText
                android:id="@+id/Inspeccion_34_Tanque_Lleno"
                android:layout_width="wrap_content"
