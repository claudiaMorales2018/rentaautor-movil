<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_light"
    tools:context=".MainActivityInsertar">


    <TextView
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5sp"
        android:text="Insertar CheckList"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_marginTop="15sp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/empresa_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Empresa #" />

            <EditText
                android:id="@+id/Inspeccion_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Inspeccion #" />

            <EditText
                android:id="@+id/Pedido_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Pedido #" />

            <EditText
                android:id="@+id/Pedido_Linea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Pedido Linea" />

            <EditText
                android:id="@+id/Empleado_Id"
                android:layout_width="91dp"
                android:layout_height="match_parent"
                android:hint="Empleado No."
                android:textSize="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/InspeccionFecha"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:textSize="12sp"
                android:hint="Fecha"
                android:inputType="date" />

            <EditText
                android:id="@+id/Inspeccion_Tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Tipo" />

            <EditText
                android:id="@+id/Inspeccion_Observacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Observaciones" />

            <EditText
                android:id="@+id/Inspeccion_Estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint=" Estado" />

            <EditText
                android:id="@+id/Inspeccion_Resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="I Resultado" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/Inspeccion_01_Luz_Delantera_Alta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Luz D.Alta"
                android:textSize="12sp"
                />

            <EditText
                android:id="@+id/Inspeccion_02_Luz_Delantera_Baja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Luz D.Baja" />

            <EditText
                android:id="@+id/Inspeccion_03_Luces_Emergencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="L.Emergencia" />

            <EditText
                android:id="@+id/Inspeccion_04_Neblinera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="Neblinera" />

            <EditText
                android:id="@+id/Inspeccion_05_Direccional_Delantera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="D.Delantera" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/Inspeccion_06_Direccion_Posteriores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="D. Posteriores" />

            <EditText
                android:id="@+id/Inspeccion_07_Parabrisas_Delantera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="P.Delantera" />

            <EditText
