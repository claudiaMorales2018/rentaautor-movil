                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="E.Laterales" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp">

            <EditText
                android:id="@+id/Inspeccion_11_Tapa_Tanque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="T.Tanque" />

            <EditText
                android:id="@+id/Inspeccion_12_Alarme_Retroceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="A. Retroceso" />

            <EditText
                android:id="@+id/Inspeccion_13_Estado_Tablero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:hint="E .Tablero" />

            <EditText
                android:id="@+id/Inspeccion_14_Freno_Mano"
                android:layout_width="wrap_content"
